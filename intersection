class Solution:
    def binary_search(self, arr, target):
        left, right = 0, len(arr) - 1
        while left <= right:
            mid = (left + right) // 2
            if arr[mid] == target:
                return True
            elif arr[mid] < target:
                left = mid + 1
            else:
                right = mid - 1
        return False

    def intersection(self, nums1: List[int], nums2: List[int]) -> List[int]:
        nums2.sort()        # sort nums2 for binary search
        result = []
        seen = set()        # avoid duplicates

        for num in nums1:
            if num not in seen and self.binary_search(nums2, num):
                result.append(num)
                seen.add(num)

        return result
