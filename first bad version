# The API isBadVersion(version) is already defined for you.
# You should not implement it, only use it.

class Solution:
    def firstBadVersion(self, n):
        left, right = 1, n
        
        while left < right:
            mid = left + (right - left) // 2
            
            if isBadVersion(mid):
                right = mid      # the first bad version is at mid or before it
            else:
                left = mid + 1   # first bad version must be after mid
        
        return left               # left == right => first bad version
